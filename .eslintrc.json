{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "react-app",
    "react-app/jest",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks",
    "prettier"
  ],
  "rules": {
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "react/jsx-uses-react": [
      "off"
    ],
    "react/react-in-jsx-scope": [
      "off"
    ],
    "react/jsx-props-no-spreading": [
      "warn"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": [
      "warn",
      {
        "additionalHooks": "(useMyCustomHook|useMyOtherCustomHook)"
      }
    ],
    // Предотвращение проверки отсутствия реквизитов в определении компонента React
    "react/prop-types": "off",
    // Запрещает неиспользуемые переменные
    "no-unused-vars": "off",
    // Запретить использование индекса массива в ключах
    "react/no-array-index-key": "off",
    // Принудительное применение определенного типа функции для функ. комп.
    "react/function-component-definition": "off",
    // Запретить пустые шаблоны деструктурирования
    "no-empty-pattern": "off",
    // Гарантирует отсутствие разрешимого пути обратно к этому модулю через его зависимости
    "import/no-cycle": "off",
    // Это правило предотвращает использование нестабильных значений (т. е. идентификаторов объектов) в качестве значения для Context.Provider.
    "react/jsx-no-constructed-context-values": "off",
    // Запретить переназначение function параметров
    "no-param-reassign": "off"
  }
}
